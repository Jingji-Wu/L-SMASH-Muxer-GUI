                    <TextBlock x:Name="FPS_Block" Margin="0,4" TextWrapping="Wrap" Text="FPS" FontSize="14" Grid.Row="1" VerticalAlignment="Center" Height="18" PreviewMouseLeftButtonDown="FPS_Click"/>
